# TopCinema Scraper Configuration
# Copy this file to .env and fill in your values

# Cookie for authenticated requests (optional, required for some features)
# Get this from your browser's developer tools
TOPCINEMA_COOKIE=

# SSL Certificate Verification (default: true)
# Set to false only if you have SSL certificate issues
# WARNING: Disabling SSL verification is a security risk
VERIFY_SSL=true

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Delay between requests in seconds (default: 1)
# Increase this if you're getting rate limited
REQUEST_DELAY=1

# Maximum number of worker threads (default: 6)
MAX_WORKERS=6

# Cache size for HTML fetching (default: 128)
CACHE_SIZE=128

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=WARNING
